<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <%= form_tag sessions_path, :method => :post do %>
          <div class="field">
            <%= label_tag :email %><br />
            <%= text_field_tag :email %>
          </div>
          <div class="field">
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
          </div>
          <div class="actions">
            <%= submit_tag("Login", :class => "btn-success") %>
          </div>
        <% end %>
    </div>
    <div class="col-md-4"></div>
</div>